<configuration>
    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>%d{HH:mm:ss.SSS} [%thread] %-5level %logger{36} - %msg%n</pattern>
        </encoder>
    </appender>

    <appender name="COUNTER" class="com.axibase.collector.logback.CountAppender">
        <filter class="com.axibase.collector.logback.Collector">
            <writer class="com.axibase.collector.logback.SendCounter"/>
            <level>WARN</level>
            <sendSeries>
                <sendThreshold>10</sendThreshold>
                <minPeriodSeconds>0</minPeriodSeconds>
            </sendSeries>
            <sendMessage>
                <every>7</every>
            </sendMessage>
        </filter>
    </appender>

    <appender name="TCP_SENDER" class="com.axibase.collector.logback.CountAppender">
        <filter class="com.axibase.collector.logback.Collector">
            <writer class="com.axibase.collector.writer.TcpAtsdWriter">
                <host>localhost</host>
                <!--CollectorTest.TEST_PORT = 35791;-->
                <port>35791</port>
            </writer>
            <!-- default: TRACE -->
            <level>INFO</level>
            <!-- default: $HOSTNAME -->
            <entity>localhost</entity>
            <sendSeries>
                <!-- 0+ default:1 -->
                <zeroRepeatCount>5</zeroRepeatCount>
                <!-- default: log_event -->
                <metric>log_event</metric>
                <!-- default: _total -->
                <totalSuffix>_sum</totalSuffix>
                <!-- default: 60 -->
                <periodSeconds>1</periodSeconds>
                <!-- default: 0 -->
                <sendThreshold>10</sendThreshold>
                <!-- default: 5 -->
                <minPeriodSeconds>0</minPeriodSeconds>
            </sendSeries>
            <!-- default: empty -->
            <sendMessage>
                <level>WARN</level>
                <every>7</every>
                <stackTraceLines>5</stackTraceLines>
            </sendMessage>
            <tag>
                <name>ttt1</name>
                <value>vvv1</value>
            </tag>
            <tag>
                <name>ttt2</name>
                <value>k=1;k2=2;k3=3</value>
            </tag>
        </filter>
    </appender>

    <appender name="UDP_SENDER" class="com.axibase.collector.logback.CountAppender">
        <filter class="com.axibase.collector.logback.Collector">
            <writer class="com.axibase.collector.writer.UdpAtsdWriter">
                <host>localhost</host>
                <port>35793</port>
            </writer>
            <level>WARN</level>
            <entity>localhost</entity>
            <sendSeries>
                <zeroRepeatCount>5</zeroRepeatCount>
                <metric>log_event</metric>
                <periodSeconds>30</periodSeconds>
                <sendThreshold>10</sendThreshold>
                <minPeriodSeconds>0</minPeriodSeconds>
            </sendSeries>
            <sendMessage>
                <level>WARN</level>
                <every>7</every>
                <stackTraceLines>5</stackTraceLines>
            </sendMessage>
        </filter>
    </appender>

    <appender name="HTTP_SENDER" class="com.axibase.collector.logback.CountAppender">
        <filter class="com.axibase.collector.logback.Collector">
            <writer class="com.axibase.collector.writer.HttpStreamingAtsdWriter">
                <url>http://localhost:8088/api/v1/command/</url>
                <username>axibase</username>
                <password>11111</password>
            </writer>
            <level>WARN</level>
            <entity>localhost</entity>
            <sendSeries>
                <zeroRepeatCount>5</zeroRepeatCount>
                <metric>log_event</metric>
                <periodSeconds>30</periodSeconds>
                <sendThreshold>1000</sendThreshold>
                <minPeriodSeconds>0</minPeriodSeconds>
            </sendSeries>
            <sendMessage>
                <level>WARN</level>
                <every>10</every>
                <stackTraceLines>5</stackTraceLines>
            </sendMessage>
        </filter>
    </appender>

    <logger name="test.tcp.write" level="debug" additivity="false">
        <appender-ref ref="TCP_SENDER" />
    </logger>

    <logger name="test.udp.write" level="debug" additivity="false">
        <appender-ref ref="UDP_SENDER" />
    </logger>

    <logger name="test.http.write" level="debug" additivity="false">
        <appender-ref ref="HTTP_SENDER" />
    </logger>

    <root level="debug">
        <appender-ref ref="COUNTER"/>
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>